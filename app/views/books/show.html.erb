<div class="row">
  <div class="col-3">
    <div class="book-image">
      <%= image_tag @book.image, class: 'img-thumbnail' %>
    </div>
  </div>
  <div class="col-6">
    <div class="book-info">
      <h3 class="display-5"><%= @book.title %></h3>
      <small class="text-muted"><%= @book.author %></small>
    </div>
    <div class="book-summary overflow-auto my-4">
      <p> <%= @book.summary %> </p>
    </div>
    <div class="text-right">
      <div class="book-price">
        <span class="badge badge-secondary"><%= number_to_currency @book.real_price %></span>
      </div>
      <%= link_to '加入购物车', line_items_path(book_id: @book), method: :post, class: 'btn btn-light' %>
    </div>
  </div>
  <div class="col-3">

  </div>
</div>